---
import Section from '../ui/Section.astro';
import Button from '../ui/Button.astro';
import { FadeIn } from '../ui/FadeIn';
---

<Section id="contact" class="section-spacing">
  <div class="max-w-2xl mx-auto">
    <FadeIn client:visible>
      <div class="bg-white/[0.02] border border-white/10 rounded-2xl p-8 md:p-12 backdrop-blur-sm hover:border-white/20 transition-all duration-300">
        <div class="text-center mb-10">
          <h2 class="heading-md text-white mb-4">
            Comece agora
          </h2>
          <p class="body-lg text-lumo-text-secondary">
             Deixe seu email e entraremos em contato.
          </p>
        </div>

        <form class="max-w-md mx-auto" onsubmit="event.preventDefault();">
          <div class="flex flex-col gap-4">
             <input 
              type="email" 
              placeholder="seu@email.com" 
              class="w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white placeholder:text-gray-600 focus:outline-none focus:border-lumo-brand/50 focus:ring-1 focus:ring-lumo-brand/50 transition-all"
            />
            <Button variant="primary" class="w-full justify-center !py-3">
              Entrar na lista de espera
            </Button>
          </div>
          <p class="text-xs text-center text-lumo-text-muted mt-4">
            Poucas vagas para o beta fechado.
          </p>
        </form>
      </div>
    </FadeIn>
  </div>
</Section>
