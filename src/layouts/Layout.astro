---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Lumo fornece agentes de IA que operam operações financeiras na Omie, comportando-se como analistas júnior disciplinados para liberar seu time para trabalho de alto valor." 
} = Astro.props;

const site = Astro.site;
const pageUrl = site ? new URL(Astro.url.pathname, site) : Astro.url;
const canonicalUrl = pageUrl.toString();
const siteOrigin = site ? site.origin : Astro.url.origin;
const ogImageUrl = site ? new URL('/assets/hero-visual.png', site).toString() : '/assets/hero-visual.png';
const logoUrl = site ? new URL('/assets/logo.png', site).toString() : '/assets/logo.png';
const structuredData = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'Organization',
      name: 'Lumo',
      url: siteOrigin,
      logo: logoUrl,
    },
    {
      '@type': 'WebSite',
      name: 'Lumo',
      url: siteOrigin,
    },
  ],
};
---

<!doctype html>
<html lang="pt-BR" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="robots" content="index,follow" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" hreflang="pt-BR" href={canonicalUrl} />
    <link id="favicon" rel="icon" type="image/png" href="/favicon-dark.png" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Lumo" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:locale" content="pt_BR" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script type="application/ld+json">
      {JSON.stringify(structuredData)}
    </script>
    
    <script is:inline>
      const favicon = document.getElementById('favicon');
      const lightIcon = '/favicon-light.png'; // Active in Light Mode
      const darkIcon = '/favicon-dark.png';   // Active in Dark Mode
      
      const updateFavicon = (event) => {
        const isDark = event.matches;
        favicon.href = isDark ? darkIcon : lightIcon;
      };
      
      if (window.matchMedia) {
        const matcher = window.matchMedia('(prefers-color-scheme: dark)');
        matcher.addEventListener('change', updateFavicon);
        // Set initial state
        updateFavicon(matcher);
      }
    </script>
  </head>
  <body class="bg-black text-white overflow-x-hidden selection:bg-lumo-brand/30 selection:text-black">
    <main class="w-full relative z-10">
      <slot />
    </main>
    
    <script>
      // Reveal on scroll
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('revealed');
          }
        });
      }, observerOptions);
      
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.reveal-on-scroll').forEach(el => {
          observer.observe(el);
        });
      });
    </script>
  </body>
</html>
